<html>
  <head>
    <meta charset='utf-8' />
    <title>ShoppingList Sensei Web</title>
    <style>
      * { margin: 0; padding: 0; } *, *:before, *:after { box-sizing:
      border-box; } html, body { font-family: "Helvetica Neue", "Helvetica",
      "Arial", sans-serif; } div { padding: 1rem; background: #0099ff; } h1 {
      font-size: 48px; line-height: 56px; color: #fff; margin: 0; text-align:
      center; }
    </style>
    <link
      rel='stylesheet'
      href='https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css'
      integrity='sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx'
      crossorigin='anonymous'
    />
  </head>
  <body>
    <div>
      <h1>Ofertas de {{user.from.first_name}} {{user.from.last_name}}</h1>
      
      <table class='table table-sm table-striped table-dark'>
        <thead>
          <tr>
            <th>Name</th>
            <th>Store</th>
            <th>Promotional Price</th>
            <th>Price</th>
            <th>Content</th>
            <th>Date</th>
          </tr>
        </thead>
        <tbody>
          {{#each wishlist}}
            <tr>
              <td>{{this.name}}</td>
              <td>{{this.offer.store}}</td>
              <td>{{this.offer.promoPrice}}</td>
              <td>{{this.offer.normalPrice}}</td>
              <td>{{{this.offer.html}}}</td>
              <td>{{{this.date}}}</td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </body>
</html>